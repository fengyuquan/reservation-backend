{
  "name": "reservation-backend",
  "version": "1.0.0",
  "description": "餐厅订座小程序后端",
  "main": "src/index.ts",
  "author": "fengyuquan",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node src/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon --watch src/**/*.ts --exec ts-node src/index.ts",
    "prod": "cross-env NODE_ENV=production node dist/index.js",
    "build": "rimraf dist && babel src --out-dir dist --extensions \".ts\"",
    "build:release": "rimraf dist && tsc -p tsconfig.release.json",
    "compile-check": "tsc --pretty --noEmit",
    "lint": "eslint --fix ./src/** --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --write './src/**/*.{ts,tsx,js,jsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "jest --verbose --detectOpenHandles",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^4.16.6",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.0.48",
    "@types/koa__cors": "^2.2.3",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.181",
    "@types/prettier": "1.16.1",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "cross-env": "^5.2.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "@koa/cors": "^3.3.0",
    "@types/koa-static": "^4.0.2",
    "basic-auth": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "log4js": "^6.4.3",
    "mysql2": "^2.3.3",
    "sequelize": "^6.17.0",
    "validator": "^13.7.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "**/*.ts": "prettier --write --ignore-unknown"
  }
}
